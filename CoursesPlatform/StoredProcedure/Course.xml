<procedure name='Course'>

  <action name='InsertCourse'>
    INSERT INTO [dbo].[Course]
    ([instructor_id]
    ,[branch_id]
    ,[course_type_id]
    ,[name]
    ,[description]
    ,[start_date]
    ,[end_date]
    ,[capacity]
    ,[capacity_is_visible]
    ,[old_price]
    ,[new_price]
    ,[expiration_register_date]
    ,[course_duration_in_hours]
    ,[no_of_days_per_week]
    ,[no_of_hours_per_day]
    ,[center_or_instructor]
    ,[is_visible])
    output inserted.id
    VALUES
    (@instructor_id
    ,@branch_id
    ,@course_type_id
    ,@name
    ,@description
    ,@start_date
    ,@end_date
    ,@capacity
    ,@capacity_is_visible
    ,@old_price
    ,@new_price
    ,@expiration_register_date
    ,@course_duration_in_hours
    ,@no_of_days_per_week
    ,@no_of_hours_per_day
    ,@center_or_instructor
    ,@is_visible)
  </action>
  
  <action name='InsertCourseDay'>
     INSERT INTO [CourseDays]
      (course_id,day , from_time , to_time )
      output inserted.id
      values
      (@course_id,@day ,@from_time , @to_time);
  </action>
  
  <action name='InsertSpecializationCourse'>
     INSERT INTO [SpecializationCourse]
      (course_id,specialization_id)
      output inserted.id
      values
      (@course_id,@specialization_id);
  </action>
  
  <action name='GetCourseByID'>
      select * , [Course].[id] as course_id , 
      [Course].[name] as course_name ,
		  [CourseType].[name] as course_type_name  
      from [Course] , [CourseType]   
      where [Course].[course_type_id]= [CourseType].[id]
      AND [Course].[id]=@id;
  </action>

  <action name='getCourseByBranchID'>
    select * , [Course].[id] as course_id ,
    [Course].[name] as course_name ,
    [CourseType].[name] as course_type_name
    from [Course] , [CourseType]
    where [Course].[course_type_id]= [CourseType].[id]
    AND [Course].[branch_id]=@branch_id;
  </action>
  
  <action name='GetCourseDays'>
    select * from [CourseDays]
    where course_id = @course_id;
  </action>
  
  <action name='GetSpecializationForCourse'>
    select [Specialization].[id] , [Specialization].[name] from [SpecializationCourse] , [Specialization]
    where [SpecializationCourse].[course_id] = @course_id 
    AND [SpecializationCourse].[specialization_id] = [Specialization].[id]
  </action>

  <action name='GetCourseTypeName'>
    select name from [CourseType]
    where id = @id;
  </action>

</procedure>
