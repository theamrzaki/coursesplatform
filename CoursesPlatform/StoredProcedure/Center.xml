  <action name='InsertPrimary'>
    Insert into Center
      (name,about , email , website )
      output inserted.Id
      values
      (@name,@about ,@email , @website);
 
  </action>
  
  <action name='UpdateSocialMedia'>
    Update Center set 
      fb_page=@fb_page ,
      instagram_page = @instagram_page  ,
      twitter_page	= @twitter_page	   ,
      linked_in_page		= @linked_in_page	    
      where id=@id;
  </action>
  
  <action name='UpdateStep'>
    Update Center set 
      step=@step    
      where id=@id;
  </action>
    
  <action name='GetCenterByID'>
    select *  from Center   
      where id=@id;
  </action>


  <action name='GetSpecializationForCenter'>
    select [Specialization].[id] , [Specialization].[name] from [SpecializationCenter] , [Specialization]
    where [SpecializationCourse].[center_id] = @center_id
    AND [SpecializationCourse].[specialization_id] = [Specialization].[id]
  </action>
    
    
    
    
</procedure>